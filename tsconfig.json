{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "allowJs": true,
        "declaration": true,
        "outDir": "./lib",
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "@/*": [
                "app/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./app/types",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "lib": [
            "es2017"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ],
    "include": [
        "app"
    ]
}